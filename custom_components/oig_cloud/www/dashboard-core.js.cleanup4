    }

    // Profil display - bez emoji, ÄistÃ½ text (nahoru mÃ­sto "ZbÃ½vÃ¡ dnes + celÃ½ zÃ­tÅ™ek")
    let profileDisplay = '';
    if (profileToday && profileToday !== 'Å½Ã¡dnÃ½ profil' && profileToday !== 'NeznÃ¡mÃ½ profil') {
